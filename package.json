{
  "name": "node-api-starter",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "jsonwebtoken": "8.4.0",
    "lodash": "^4.17.11",
    "log4js": "^3.0.6",
    "mongoose": "^5.4.0",
    "restify": "^7.3.0",
    "restify-cors-middleware": "1.1.1"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "8.3.0",
    "@types/lodash": "^4.14.119",
    "@types/mongoose": "5.2.5",
    "@types/node": "^10.12.17",
    "@types/restify": "7.2.6",
    "@types/restify-cors-middleware": "^1.0.1",
    "concurrently": "4.1.0",
    "copyfiles": "2.1.0",
    "dotenv": "6.2.0",
    "js-yaml": "^3.12.0",
    "json-refs": "3.0.12",
    "nodemon": "1.18.9",
    "rimraf": "2.6.2",
    "swagger-parser": "^6.0.2",
    "tslint": "5.12.0",
    "typescript": "^3.2.2",
    "wait-on": "3.2.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run tsc-watch\" \"npm run nodemon\"",
    "build": "tsc",
    "start": "node ./build/app.js",
    "clean": "rimraf build",
    "prebuild": "npm run clean && npm run copy-files",
    "prestart": "npm run build",
    "swagger": "node swagger-generate.js",
    "predev": "npm run clean && npm run copy-files",
    "copy-files": "copyfiles --flat .env build/ && copyfiles --flat log4js.json build/",
    "prenodemon": "wait-on ./build/app.js",
    "nodemon": "nodemon  -r dotenv/config --delay 1000ms --watch .env --watch ./build --inspect --inspect-port=1234  \"./build/app.js\" dotenv_config_path=.env",
    "tsc-watch": "tsc -w",
    "lint": "tslint -c tslint.json \"./src/**/*.ts\""
  }
}
