{
  "name": "node-api-starter",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "jsonwebtoken": "8.5.1",
    "lodash": "^4.17.15",
    "log4js": "^4.5.1",
    "mongoose": "^5.6.5",
    "restify": "^8.3.3",
    "restify-cors-middleware": "1.1.1",
    "dotenv": "8.0.0"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "8.3.2",
    "@types/lodash": "^4.14.136",
    "@types/mongoose": "5.5.9",
    "@types/node": "^10.14.13",
    "@types/restify": "7.2.12",
    "@types/restify-cors-middleware": "^1.0.1",
    "concurrently": "4.1.1",
    "copyfiles": "2.1.1",
    "js-yaml": "^3.13.1",
    "json-refs": "3.0.13",
    "nodemon": "1.19.1",
    "rimraf": "2.6.3",
    "swagger-parser": "^8.0.0",
    "tslint": "5.18.0",
    "typescript": "^3.5.3",
    "wait-on": "3.3.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run tsc-watch\" \"npm run nodemon\"",
    "build": "tsc",
    "start": "node ./build/app.js",
    "clean": "rimraf build",
    "prebuild": "npm run clean && npm run copy-files",
    "prestart": "npm run build",
    "swagger": "node swagger-generate.js",
    "predev": "npm run clean && npm run copy-files",
    "copy-files": "copyfiles --flat .env build/ && copyfiles --flat log4js.json build/",
    "prenodemon": "wait-on ./build/app.js",
    "nodemon": "nodemon  -r dotenv/config --delay 1000ms --watch .env --watch ./build --inspect --inspect-port=1234  \"./build/app.js\" dotenv_config_path=.env",
    "tsc-watch": "tsc -w",
    "lint": "tslint -c tslint.json \"./src/**/*.ts\""
  }
}
